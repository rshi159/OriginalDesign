int x = 0;
void setup()
{
  size(1280,720);
}
void draw()
{
  bg();
  train();
}
void bg()
{
  fill(15,255,15);
  bezier(-320,720,0,100,0,100,320,720);
  bezier(0,720,320,100,320,100,640,720);
  bezier(320,720,640,100,640,100,960,720);
  bezier(640,720,960,100,960,100,1280,720);
  bezier(960,720,1280,100,1280,100,1600,720);
  bezier(1280,720,1600,100,1600,100,1920,720);
  x = x -20;
}
void train()
{
  fill(255,180,255);
}


