int x = 0;
void setup()
{
  size(1280,720);
}
void draw()
{
  bg();
  train();
}
void bg()
{
  background(100,100,255);
  fill(30,255,150);
  bezier(-320+x,720,0+x,100,0+x,100,320+x,720);
  bezier(320+x,720,640+x,100,640+x,100,960+x,720);
  bezier(960+x,720,1280+x,100,1280+x,100,1600+x,720);
  bezier(1600+x,720,1920+x,100,1920+x,100,2240+x,720);
  fill(0,255,0);
  bezier(0+x,720,320+x,100,320+x,100,640+x,720);
  bezier(640+x,720,960+x,100,960+x,100,1280+x,720);
  bezier(1280+x,720,1600+x,100,1600+x,100,1920+x,720);
  x = x -4;
  if(x < -640)
  {
  	x = -4;
  }
}
void train()
{
  fill(255,180,255);
}


